<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%= image_tag(idea.picture_url, :width => 300) if idea.picture? %>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.dascription %>
      </div>
    <% end %>
  </div>
<% end %>

